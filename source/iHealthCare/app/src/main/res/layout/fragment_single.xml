<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.ase.team22.ihealthcare.questions.Single">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/imagelogo"
        />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/md_green_200">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/single_question"
                android:text="single type question comes here"
                android:textColor="@color/primary_dark"
                android:textSize="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="10dp"
                android:gravity="left"
                />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/radio_group"
                android:gravity="left"
                android:layout_marginBottom="25dp">

                <RadioButton android:id="@+id/radio_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textColor="@color/primary_dark"
                    android:textSize="15dp"
                    />
                <RadioButton android:id="@+id/radio_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_dark"
                    android:text="No"
                    android:textSize="15dp"/>
                <RadioButton android:id="@+id/radio_dontKnow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_dark"
                    android:text="Don't Know"
                    android:textSize="15dp"/>
            </RadioGroup>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
