<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ase.team22.ihealthcare.questions.DiagnosisReport">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/md_amber_50">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/diagnosis_result"
                android:text="Result"
                android:textColor="@color/primary_dark"
                android:textSize="22dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="10dp"
                android:gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/result_condition"
                    android:text="Condition"
                    android:textColor="@color/primary_dark"
                    android:textSize="18dp"
                    android:paddingLeft="10dp"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/result_condition_sol"
                    android:textColor="@color/primary_dark"
                    android:textSize="18dp"
                    android:paddingLeft="10dp"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:weightSum="2"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/result_probability"
                    android:text="Probability"
                    android:textColor="@color/primary_dark"
                    android:textSize="18dp"
                    android:paddingLeft="10dp"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/result_probability_sol"
                    android:textColor="@color/primary_dark"
                    android:textSize="18dp"
                    android:paddingLeft="10dp"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:text="Doctors near by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_doctors_near_by"
        android:textColor="@color/md_white_1000"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:background="@color/md_blue_600"
        />

</LinearLayout>
